<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="str"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_spark_gray_line_2_rect">

        <ImageView
            android:id="@+id/iv_incomplete_item_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_storage_incomplete_certification_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/bg_storage_black_filter"
            app:layout_constraintBottom_toBottomOf="@id/iv_incomplete_item_photo"
            app:layout_constraintEnd_toEndOf="@id/iv_incomplete_item_photo"
            app:layout_constraintStart_toStartOf="@id/iv_incomplete_item_photo"
            app:layout_constraintTop_toTopOf="@id/iv_incomplete_item_photo" />

        <View
            android:id="@+id/view_incomplete_layout_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_spark_gray_line_2_rect" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_incomplete_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv_incomplete_item_sparkflake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_storage_incomplete_item_sparkflake"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_incomplte_item_leftDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/futura_bold"
                android:includeFontPadding="false"
                android:text="32 DAYS"
                android:textAlignment="center"
                android:textColor="@color/spark_white"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_incomplete_item_total_spark_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_incomplete_item_title">

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_incomplete_item_roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            tools:text="자기 전 명상하기"
            android:text="@{str}"
            android:textColor="@color/spark_white"
            android:textSize="24dp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout_incomplete_item_total_spark_number" />

        <TextView
            android:id="@+id/tv_incomplete_item_total_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_medium"
            android:includeFontPadding="false"
            android:text="2021.12.26 - 2022.02.26"
            android:textColor="@color/spark_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_incomplete_item_roomName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>