<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.timer.TimerStartActivity">


        <ImageView
            android:id="@+id/iv_timer_quit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_timer_quit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_timer_roomName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="59dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="30분 독서"
            android:textAlignment="center"
            android:textColor="@color/spark_black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_timer_quit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_timer_quit"
            app:layout_constraintTop_toTopOf="@id/iv_timer_quit" />

        <View
            android:id="@+id/view_timer_stepLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="20dp"
            android:background="@color/spark_pinkred"
            app:layout_constraintEnd_toStartOf="@id/tv_timer_stepTwo"
            app:layout_constraintStart_toEndOf="@id/tv_timer_stepOne"
            app:layout_constraintTop_toBottomOf="@id/tv_timer_roomName" />

        <TextView
            android:id="@+id/tv_timer_stepOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="119dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/futura_medium"
            android:text="1"
            android:textColor="@color/spark_pinkred"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_timer_roomName" />

        <TextView
            android:id="@+id/tv_timer_stepTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="119dp"
            android:fontFamily="@font/futura_medium"
            android:text="2"
            android:textColor="@color/spark_pinkred"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_timer_roomName" />

        <TextView
            android:id="@+id/tv_timer_stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:text="스톱워치"
            android:textColor="@color/spark_pinkred"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_timer_stepOne" />

        <TextView
            android:id="@+id/tv_timer_photoProof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="92dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:text="사진 인증"
            android:textColor="@color/spark_pinkred"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_timer_stepTwo" />

        <View
            android:id="@+id/view_timer_division_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="87dp"
            android:background="#c7c7c7"
            app:layout_constraintTop_toBottomOf="@id/view_timer_stepLine" />

        <Chronometer
            android:id="@+id/chronometer_timer_stopwatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="69dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="69dp"
            android:fontFamily="@font/futura_bold"
            android:gravity="center_horizontal"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_timer_division_line" />

        <ImageView
            android:id="@+id/iv_timer_stopwatch_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_timer_stopwatch_pause"
            app:layout_constraintStart_toStartOf="@id/chronometer_timer_stopwatch"
            app:layout_constraintTop_toBottomOf="@id/chronometer_timer_stopwatch" />

        <ImageView
            android:id="@+id/iv_timer_stopwatch_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_timer_stopwatch_play"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/chronometer_timer_stopwatch"
            app:layout_constraintTop_toBottomOf="@id/chronometer_timer_stopwatch" />

        <ImageView
            android:id="@+id/iv_timer_stopwatch_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_timer_stopwatch_pause"
            app:layout_constraintTop_toTopOf="@+id/iv_timer_stopwatch_pause"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_timer_stopwatch_stop"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textColor="@color/spark_white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:background="@color/spark_dark_pinkred"
            tools:text="시간 측정 시작" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>