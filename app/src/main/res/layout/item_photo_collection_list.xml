<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="str"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_photo_collection_item_roundedCorner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/iv_photo_collection_item_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_photo_collection_yogurt"
              />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_photo_collection_item_leftDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/futura_bold"
            android:text="@{str}"
            android:textColor="@color/spark_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/iv_photo_collection_item_fire_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_photo_collection_item_roundedCorner"
            tools:text="D-day" />

        <ImageView
            android:id="@+id/iv_photo_collection_item_fire_gray"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_item_fire_gray"
            app:layout_constraintEnd_toStartOf="@id/tv_photo_collection_item_total_sparkNumber"
            app:layout_constraintTop_toBottomOf="@id/cardview_photo_collection_item_roundedCorner" />

        <TextView
            android:id="@+id/tv_photo_collection_item_total_sparkNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="12"
            android:textAlignment="viewEnd"
            android:textColor="@color/spark_gray"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@id/cardview_photo_collection_item_roundedCorner"
            app:layout_constraintTop_toBottomOf="@id/cardview_photo_collection_item_roundedCorner" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
    
